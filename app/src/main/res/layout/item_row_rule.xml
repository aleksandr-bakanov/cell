<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="36sp" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/buttonOpenRuleConditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_format_list_bulleted_black_24dp"
        app:layout_constraintStart_toEndOf="@id/title" />

    <Button
        android:id="@+id/buttonChooseRuleAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/hero_screen_cell_logic_utf_icons_size"
        app:layout_constraintStart_toEndOf="@id/buttonOpenRuleConditions" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/buttonRemoveRule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_delete_black_24dp"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>
