<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/image_description_main_menu_background"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_cs_introduction_0" />

    <Button
        android:id="@+id/buttonNewGame"
        android:background="@drawable/button_main_menu_background"
        android:textColor="@color/buttonMainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bromine"
        android:layout_margin="2dp"
        android:text="@string/button_new_game_title"
        app:layout_constraintBottom_toTopOf="@id/buttonContinueGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/buttonContinueGame"
        android:background="@drawable/button_main_menu_background"
        android:textColor="@color/buttonMainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bromine"
        android:layout_margin="2dp"
        android:text="@string/button_continue_game_title"
        app:layout_constraintBottom_toTopOf="@id/buttonGoToBattle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonNewGame" />

    <Button
        android:id="@+id/buttonGoToBattle"
        android:background="@drawable/button_main_menu_background"
        android:textColor="@color/buttonMainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bromine"
        android:layout_margin="2dp"
        android:text="@string/button_go_to_battle_title"
        app:layout_constraintBottom_toTopOf="@id/buttonHeroScreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonContinueGame" />

    <Button
        android:id="@+id/buttonHeroScreen"
        android:background="@drawable/button_main_menu_background"
        android:textColor="@color/buttonMainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:fontFamily="@font/bromine"
        android:text="@string/button_hero_screen_title"
        app:layout_constraintBottom_toTopOf="@id/buttonExitGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonGoToBattle" />

    <Button
        android:id="@+id/buttonExitGame"
        android:background="@drawable/button_main_menu_background"
        android:textColor="@color/buttonMainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bromine"
        android:layout_margin="2dp"
        android:text="@string/button_exit_game_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonHeroScreen" />

</androidx.constraintlayout.widget.ConstraintLayout>