<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ruleConditionListItemFieldToCheck"
        android:layout_width="@dimen/hero_screen_cell_logic_rule_representation_size"
        android:layout_height="@dimen/hero_screen_cell_logic_rule_representation_size"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_semi_transparent_hex"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ruleConditionListItemOperation"
        android:layout_width="@dimen/hero_screen_cell_logic_rule_representation_size"
        android:layout_height="@dimen/hero_screen_cell_logic_rule_representation_size"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_semi_transparent_hex"
        app:layout_constraintStart_toEndOf="@id/ruleConditionListItemFieldToCheck" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ruleConditionListItemExpectedValue"
        android:layout_width="@dimen/hero_screen_cell_logic_rule_representation_size"
        android:layout_height="@dimen/hero_screen_cell_logic_rule_representation_size"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_semi_transparent_hex"
        app:layout_constraintStart_toEndOf="@id/ruleConditionListItemOperation" />
</androidx.constraintlayout.widget.ConstraintLayout>